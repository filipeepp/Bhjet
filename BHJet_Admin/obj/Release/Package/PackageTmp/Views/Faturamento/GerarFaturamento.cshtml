@using BHJet_Admin.Models.Faturamento
@model GerarFaturamantoModel

<ol class="breadcrumb">
    <li><a onclick="history.go(-1);">Home</a></li>
    <li><a href="#map_canvas">Gerar Faturamento</a></li>
</ol>

<div class="container-fluid">
    <div class="row">
        <div class="col-xs-4 col-sm-7 col-md-12">
            <div class="panel panel-default">
                <div class="panel-body">

                    <div class="titulo">
                        <h2>
                            <a onclick="history.go(-1);">
                                <i class="fa fa-arrow-left" aria-hidden="true"></i>
                            </a>
                            Gerar Faturamento
                        </h2>
                    </div>

                    <div class="row">

                        @using (Html.BeginForm("GerarFaturamento", "Faturamento", FormMethod.Post, new { @class = "form-horizontal" }))
                        {
                            <div class="form-group ">
                                <label class="control-label col-sm-5" for="email">Selecione o mês e ano:</label>
                                <div class="col-sm-2">
                                    @Html.DropDownListFor(m => m.MesSelecionado, Model.Meses, new { @class = "form-control" })
                                </div>
                                <div class="col-sm-2">
                                    @Html.DropDownListFor(m => m.AnoSelecionado, new SelectList(Model.ListaAno, @Model.AnoSelecionado), new { @class = "form-control" })
                                </div>
                            </div>

                            <div class="form-group ">
                                <label class="control-label col-sm-5" for="email">Selecione o(s) cliente(s):</label>
                                <div class="col-sm-4">
                                    @Html.DropDownListFor(m => m.ClienteSelecionado, new SelectList(Model.ListaClientes, "Key", "Value"),
                                     "Lista de Cliente", new { @class = "form-control" })
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-xs-12 col-md-12 text-center">
                                    <button type="submit" class="btn btn-default" value="Pesquisar">
                                        <i class="fa fa-file-text-o" aria-hidden="true"></i>Gerar Faturamento
                                    </button>
                                </div>
                            </div>
                        }

                    </div>

                    <div class="row">
                            @{
                                if (Model.ClienteSelecionado != null)
                                {
                                    Html.RenderPartial("_DetalheFaturamento", Model.ListaFaturamento);
                                }
                            }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>