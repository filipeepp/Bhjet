@using BHJet_Admin.Models.Faturamento
@model DetalheFaturamentoModel

<ol class="breadcrumb">
    <li><a href="@Url.Action("Index", "Home")">Home</a></li>
    <li><a href="">Consultar Faturamento</a></li>
    <li><a href="">Detalhe Faturamento</a></li>
</ol>

<div class="container-fluid">
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12">
            <div class="panel panel-default">
                <div class="panel-body">

                    <div class="titulo">
                        <h2>
                            <a onclick="history.go(-1);">
                                <i class="fa fa-arrow-left" aria-hidden="true"></i>
                            </a>
                            Detalhe Faturamento
                        </h2>
                    </div>

                    <div class="panel panel-default" style="margin:30px">
                        <div class="panel-body">
                            <div class="titulo">
                                <h2>
                                    <a onclick="history.go(-1);">
                                        <i class="fa fa-file-text-o" aria-hidden="true"></i>
                                    </a>
                                    Cabeçalho
                                </h2>
                            </div>
                            <div class="row">
                                <div class="col-xs-12 col-sm-12 col-lg-12">
                                    <i class="fa fa-user-o" aria-hidden="true"></i>
                                    <label for="txtNome">Cliente: </label>
                                    @Html.Label(Model.Cliente)
                                    <br />
                                    <i class="fa fa-file-o" aria-hidden="true"></i>
                                    <label for="txtNome">Contrato: </label>
                                    @Html.Label(Model.Contrato)
                                    <br />
                                    <i class="fa fa-calendar-o" aria-hidden="true"></i>
                                    <label for="txtNome">Período: </label>
                                    @Html.Label(Model.PeriodoIntervalo)
                                    <br />
                                    <i class="fa fa-calendar" aria-hidden="true"></i>
                                    <label for="txtNome">Data do relatório: </label>
                                    @Html.Label(Model.DataRelatorio.ToLongDateString())
                                </div>
                            </div>

                        </div>
                    </div>


                    <div class="panel panel-default" style="margin:30px">
                        <div class="panel-body">
                            <div class="titulo">
                                <h2>
                                    <a onclick="history.go(-1);">
                                        <i class="fa fa-map-marker" aria-hidden="true"></i>
                                    </a>
                                    Log Corrida
                                </h2>
                            </div>
                            <div class="row">
                                <div class="col-xs-12 col-sm-12 col-lg-12">
                                    @{
                                        Html.RenderPartial("_DetalheCorrida", Model.Detalhes);
                                    }
                                </div>
                            </div>
                        </div>
                    </div>


                    <div class="panel panel-default" style="margin:30px">
                        <div class="panel-body">
                            <div class="titulo">
                                <h2>
                                    <a onclick="history.go(-1);">
                                        <i class="fa fa-money" aria-hidden="true"></i>
                                    </a>
                                    Total Geral: <b>@Html.Label(Model.Total.TotalFatura.ToString("C"))</b>
                                </h2>
                            </div>
                            <div class="row">
                                <div class="col-sm-4">
                                    <i class="fa fa-angle-right" aria-hidden="true"></i>
                                    <label for="txtNome">Total KM no período: </label>
                                    @Html.Label(Model.Total.TotalKm.ToString())
                                    <br />
                                    <i class="fa fa-angle-right" aria-hidden="true"></i>
                                    <label for="txtNome">Franquia contratada: </label>
                                    @Html.Label(Model.Total.FranquiaContratada.ToString())
                                    <br />
                                    <i class="fa fa-angle-right" aria-hidden="true"></i>
                                    <label for="txtNome">KM escedente: </label>
                                    @Html.Label(Model.Total.KMExcedente.ToString())
                                </div>
                                <div class="col-sm-4">
                                    <i class="fa fa-angle-right" aria-hidden="true"></i>
                                    <label for="txtNome">Total diárias: </label>
                                    @Html.Label(Model.Total.TotalDiarias.ToString("C"))
                                </div>
                                <div class="col-sm-4">
                                    <i class="fa fa-angle-right" aria-hidden="true"></i>
                                    <label for="txtNome">Valor diárias: </label>
                                    @Html.Label(Model.Total.ValorDiarias.ToString("C"))
                                    <br />
                                    <i class="fa fa-angle-right" aria-hidden="true"></i>
                                    <label for="txtNome">Valor excedente franquia: </label>
                                    @Html.Label(Model.Total.ValorExcedente.ToString("C"))
                                </div>
                            </div>
                        </div>
                    </div>


                </div>
            </div>
        </div>
    </div>
</div>
