@using BHJet_Admin.Models.Faturamento
@model IEnumerable<FaturamentoModel>


<div class="panel panel-default" style="margin:30px">
    <div class="panel-body">

        <div class="titulo">
            <h2>
                <a onclick="history.go(-1);">
                    <i class="fa fa-file" aria-hidden="true"></i>
                </a>
                Detalhe Faturamento
            </h2>
        </div>

        <table class="table table-bordered">
            <thead>
                <tr class="bg-light-gray">
                    <th>Cliente</th>
                    <th>Apuração</th>
                    <th>Tipo Contrato</th>
                    <th>Valor R$</th>
                </tr>
            </thead>
            <tbody>
                @foreach (FaturamentoModel fat in @Model)
                {
                    <tr>
                        <td><a href="@Url.Action("DetalheFaturamento", "Faturamento", new { Edicao = true, ID = @fat.ID })">@fat.Cliente<a/></td>
                        <td><a href="@Url.Action("DetalheFaturamento", "Faturamento", new { Edicao = true, ID = @fat.ID })">@fat.Apuração<a /></td>
                        <td><a href="@Url.Action("DetalheFaturamentoAvulso", "Faturamento", new { Edicao = true, ID = @fat.ID })">@fat.DescContrato<a /></td>
                        <td><a href="@Url.Action("DetalheFaturamentoAvulso", "Faturamento", new { Edicao = true, ID = @fat.ID })">@fat.Valor<a /></td>
                    </tr>
                }
            </tbody>
        </table>


    </div>
</div>
