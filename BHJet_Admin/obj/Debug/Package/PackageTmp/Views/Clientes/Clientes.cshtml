@using System.Web.Http
@using BHJet_Admin.Models
@model TabelaClienteModel

<ol class="breadcrumb">
    <li><a onclick="history.go(-1);">Home</a></li>
    <li><a href="#map_canvas">@ViewBag.TituloSolicitacao</a></li>
</ol>

<div class="container-fluid">

    <div class="row">
        <div class="col-xs-12 col-sm-7 col-md-12">
            <div class="panel panel-default">
                <div class="panel-body">

                    <div class="titulo">
                        <h2>
                            <a onclick="history.go(-1);">
                                <i class="fa fa-arrow-left" aria-hidden="true"></i>
                            </a>
                            Clientes
                        </h2>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <label for="txtPesquisarCliente">Pesquisar Cliente</label>
                            <form class="form-inline">
                                <div class="form-group">
                                    <div class="input-group">
                                        <div class="input-group-addon"><i class="fa fa-search"></i></div>
                                        <input type="text" class="col-xs-4 col-md-12 form-control" id="txtPesquisarCliente">
                                    </div>
                                </div>
                                <button type="submit" class="btn btn-default"><i class="fa fa-share"></i></button>
                                <button id="" type="button" class="btn btn-primary" onclick="location.href='NovoCliente'"><i class="fa fa-plus" aria-hidden="true"></i>Novo Cliente</button>
                            </form>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <div class="table-responsive">
                                <br />
                                <table class="table table-bordered">
                                    <thead>
                                        <tr class="bg-light-gray">
                                            <th scope="col">Cliente</th>
                                            <th scope="col">Tipo Contrato</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var linha in @Model.ListModel)
                                        {
                                            <tr>
                                                <td>@linha.NomeRazaoSocial</td>
                                                <td>@linha.TipoContrato</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>


                </div>
            </div>
        </div>
    </div>

</div>
