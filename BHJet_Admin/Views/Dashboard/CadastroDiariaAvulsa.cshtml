@{
    Html.EnableClientValidation(true);
}

@using BHJet_Admin.Models.Dashboard
@using BHJet_Core.Enum
@model DiariaModel

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")"></script>
<script src="@Url.Content("~/Scripts/jquery.mask.min.js")"></script>

<ol class="breadcrumb">
    <li><a href="@Url.Action("Index", "Home")">Home</a></li>
    <li><a href="#map_canvas"> Diária Avulsa </a></li>
</ol>

<div class="container-fluid">


    <div class="row">
        <div class="col-xs-12 col-md-12">
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="titulo">
                                <h2>
                                    <a onclick=" history.go(-1);">
                                        <i class="fa fa-arrow-left" aria-hidden="true"></i>
                                    </a>
                                    Diária Avulsa
                                </h2>
                            </div>
                        </div>
                    </div>

                    @using (Html.BeginForm("CadastroDiariaAvulsa", "Dashboard", FormMethod.Post, new { @class = "form-horizontal" }))
                    {

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group ">
                            <label class="control-label col-sm-5" for="email">Selecione o cliente:</label>
                            <div class="col-sm-4">

                                @Html.DropDownListFor(m => m.ClienteSelecionado, Model.ListaClientes,
                                                            "Lista de Cliente", new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.ClienteSelecionado, null, new { @class = "text-danger" })

                            </div>
                        </div>

                        <div class="form-group ">
                            <label class="control-label col-sm-5" for="email">Selecione o tipo de veículo:</label>
                            <div class="col-sm-4" style="margin-top: -10px;">
                                @foreach (var tipoEnum in Enum.GetValues(typeof(TipoVeiculo)))
                                {
                                    var id = TagBuilder.CreateSanitizedId(string.Format("{0}_{1}_{2}", "rdbtn", typeof(TipoVeiculo), tipoEnum));
                                    @Html.RadioButtonFor(s => s.TipoVeiculo, tipoEnum, new { id, @class = "option-input radio" })
                                    @Html.Label(tipoEnum.ToString(), new { @for = id, @style = "vertical-align: sub;" })
                                }
                                @Html.ValidationMessageFor(model => model.TipoVeiculo, null, new { @class = "text-danger" })

                            </div>
                        </div>

                        <div class="form-group ">
                            <label class="control-label col-sm-5" for="email">Defina o período:</label>
                            <div class="col-sm-4">
                                @Html.TextBoxFor(model => model.PeriodoInicial, new { type = "date", @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.PeriodoInicial, null, new { @class = "text-danger" })
                                <label class="control-label col-sm-7" for="email">até</label>
                            </div>
                        </div>

                        <div class="form-group ">
                            <label class="control-label col-sm-5" for="email"></label>
                            <div class="col-sm-4">
                                @Html.TextBoxFor(model => model.PeriodoFinal, new { type = "date", @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.PeriodoFinal, null, new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group ">
                            <label class="control-label col-sm-5" for="email">Selecione um profissional:</label>
                            <div class="col-sm-4">
                                @Html.DropDownListFor(m => m.ProfissionalSelecionado, Model.ListaProfissionais,
                                                          "Lista de motociclistas ou motoristas", new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.ProfissionalSelecionado, null, new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group ">
                            <label class="control-label col-sm-5" for="email">Valor da diária:</label>
                            <div class="col-sm-4">
                                @Html.TextBoxFor(model => model.ValorDiaria, new { placeholder = "R$", @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.ValorDiaria, null, new { @class = "text-danger", title = "Mask: 99/99/9999" })
                            </div>
                        </div>

                        <div class="form-group ">
                            <label class="control-label col-sm-5" for="email">Valor da comissão:</label>
                            <div class="col-sm-4">
                                @Html.TextBoxFor(model => model.ValorComissao, new { placeholder = "R$", @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.ValorComissao, null, new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group ">
                            <label class="control-label col-sm-5" for="email">Observações:</label>
                            <div class="col-sm-4">
                                @Html.TextAreaFor(model => model.Observacao, new { @class = "form-control" })
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-xs-12 col-md-12 text-center">
                                <button type="submit" class="btn btn-default" value="Pesquisar">
                                    <i class="fa fa-share"></i>Agendar Diária
                                </button>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {

        $("#ValorDiaria").mask('000.000.000.000.000,00', { reverse: true });
        $("#ValorComissao").mask('000.000.000.000.000,00', { reverse: true });

    });
</script>