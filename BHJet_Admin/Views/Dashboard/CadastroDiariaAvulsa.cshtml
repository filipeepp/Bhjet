
@using BHJet_Admin.Models.Dashboard
@model DiariaModel

<ol class="breadcrumb">
    <li><a onclick="history.go(-1);">Home</a></li>
    <li><a href="#map_canvas"> Diária Avulsa </a></li>
</ol>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <h4>
                <a onclick=" history.go(-1);">
                    <i class="fa fa-arrow-left" aria-hidden="true"></i>
                </a>
                Diária Avulsa
            </h4>
        </div>
    </div>

    <div class="container-fluid">

        @using (Html.BeginForm("OSCliente", "Dashboard", FormMethod.Get, new { @class = "form-inline" }))
        {
            <div class="row">
                <div class="col-xs-3 col-md-4">
                    <label class="control-label labelChave">Selecione o cliente:</label>
                    @Html.DropDownList("ListaClientes",
                       new SelectList(Enum.GetValues(typeof(BHJet_Core.Enum.DashboardTipoDisponivelEnum))),
                       "Lista de Cliente",
                       new { @class = "form-control" })
                </div>
            </div>

            <div class="row">
                <div class="col-xs-3 col-md-4">
                    <label class="control-label labelChave">Selecione o tipo de veículo:</label>
                    <div class="radio">
                        <label>
                            @Html.RadioButton("Gender", "Male", false)
                            Moto
                        </label>
                    </div>

                    <div class="radio">
                        <label>
                            @Html.RadioButton("Gender", "Male", false)
                            Carro
                        </label>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-xs-3 col-md-4">
                    <label class="control-label labelChave">Defina o período:</label>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-2 col-md-2">
                    @Html.TextBoxFor(model => model.PeriodoInicial, new { type = "date", @class = "form-control" })
                </div>
                <div class="col-xs-2 col-md-2">
                    @Html.TextBoxFor(model => model.PeriodoInicial, new { type = "date", @class = "form-control" })
                </div>
            </div>

            <div class="row">
                <div class="col-xs-3 col-md-4">
                    <label class="control-label labelChave">Selecione um profissional:</label>
                    @Html.DropDownList("ListaClientes",
                       new SelectList(Enum.GetValues(typeof(BHJet_Core.Enum.DashboardTipoDisponivelEnum))),
                       "Lista de motociclistas ou motoristas",
                       new { @class = "form-control" })
                </div>
            </div>

            <div class="row">
                <div class="col-xs-2 col-md-2">
                    <label class="control-label labelChave">Valor da diária:</label>
                    @Html.TextBoxFor(model => model.PeriodoInicial, new { placeholder = "R$", @class = "form-control" })
                </div>
                <div class="col-xs-2 col-md-2">
                    <label class="control-label labelChave">Valor da comissão:</label>
                    @Html.TextBoxFor(model => model.PeriodoInicial, new { placeholder = "R$", @class = "form-control" })
                </div>
            </div>

            <div class="row">
                <div class="col-xs-3 col-md-5">
                    <label class="control-label labelChave">Valor da diária:</label>
                    @Html.TextAreaFor(model => model.PeriodoInicial, new { @class = "form-control" })
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-xs-3 col-md-5">
                    <button type="submit" class="btn btn-default" value="Pesquisar">
                        <i class="fa fa-share"></i>Agendar Diária
                    </button>
                </div>
            </div>
        }

    </div>
</div>