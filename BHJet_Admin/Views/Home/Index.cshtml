@using BHJet_Admin.Models
@model ResumoModel

<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
<script src="~/Scripts/jquery.counterup.min.js"></script>
<script src="http://cdnjs.cloudflare.com/ajax/libs/waypoints/2.0.3/waypoints.min.js"></script>

<ol class="breadcrumb">
    <li><a href="#">Home</a></li>
    <li><a href="#"></a></li>
</ol>

<div class="container-fluid">
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12">
            <div class="panel panel-default">
                <div class="panel-body">

                    <div class="titulo">
                        <h2>
                            <a onclick=" history.go(-1);">
                                <i class="fa fa-arrow-left" aria-hidden="true"></i>
                            </a>
                            Dashboard BHJet
                        </h2>
                    </div>

                    <div class="row">
                        <div class="col-xs-12 col-sm-10 col-md-12">
                            <div class="col-xs-12 col-sm-5 col-lg-3">
                                <a href="@Url.Action("ChamadoAvulsoEspera", "Dashboard", new { tipoSolicitacao = BHJet_Core.Enum.DashboardTipoDisponivelEnum.ChamadoAguardandoMotociclista })">
                                    <div class="small-box bg-light-gray">
                                        <div class="inner">
                                            <h3><span class="counter"> @Html.Label(Model.ChamadosAvulsosAguardandoMoto.ToString())</span></h3>
                                            <h6>Chamados avulsos aguardando motociclistas</h6>
                                        </div>
                                        <div class="icon">
                                            <i class="ion ion-bag"></i>
                                        </div>
                                        <span class="small-box-footer">Ver detalhes <i class="fa fa-arrow-circle-right"></i></span>
                                    </div>
                                </a>
                            </div>

                            <div class="col-xs-12 col-sm-5 col-lg-3">
                                <a href="@Url.Action("ChamadoAvulsoEspera", "Dashboard", new { tipoSolicitacao = BHJet_Core.Enum.DashboardTipoDisponivelEnum.ChamadoAguardandoCarros })">
                                    <div class="small-box bg-light-gray">
                                        <div class="inner">
                                            <h3><span class="counter">@Html.Label(Model.ChamadosAvulsosAguardandoCarro.ToString())</span></h3>
                                            <h6>Chamados avulsos aguardando carros</h6>
                                        </div>
                                        <div class="icon">
                                            <i class="ion ion-bag"></i>
                                        </div>
                                        <span class="small-box-footer">Ver detalhes <i class="fa fa-arrow-circle-right"></i></span>
                                    </div>
                                </a>
                            </div>

                            <div class="col-xs-12 col-sm-5 col-lg-3">
                                <a href="@Url.Action("ChamadoAvulsoEspera", "Dashboard", new { tipoSolicitacao = BHJet_Core.Enum.DashboardTipoDisponivelEnum.MotociclistaDisponivel })">
                                    <div class="small-box bg-light-gray">
                                        <div class="inner">
                                            <h3><span class="counter">@Html.Label(Model.MotociclistasDisponiveis.ToString())</span></h3>
                                            <h6>Motociclistas disponíveis</h6>
                                        </div>
                                        <div class="icon">
                                            <i class="ion ion-bag"></i>
                                        </div>
                                        <span class="small-box-footer">Ver detalhes <i class="fa fa-arrow-circle-right"></i></span>
                                    </div>
                                </a>
                            </div>

                            <div class="col-xs-12 col-sm-5 col-lg-3">
                                <a href="@Url.Action("ChamadoAvulsoEspera", "Dashboard", new { tipoSolicitacao = BHJet_Core.Enum.DashboardTipoDisponivelEnum.CarrosDisponiveis })">
                                    <div class="small-box bg-light-gray">
                                        <div class="inner">
                                            <h3><span class="counter">@Html.Label(Model.CarrosDisponiveis.ToString())</span></h3>
                                            <h6>Carros disponíveis</h6>
                                        </div>
                                        <div class="icon">
                                            <i class="ion ion-bag"></i>
                                        </div>
                                        <span class="small-box-footer">Ver detalhes <i class="fa fa-arrow-circle-right"></i></span>
                                    </div>
                                </a>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-xs-12 col-sm-7 col-md-12">
                            <div class="col-xs-12 col-sm-12 col-md-5 text-center">
                                <div class="box bg-light-gray">
                                    <div class="box-title">
                                        <label for="exampleInputAmount">Serviço Avulso</label>
                                    </div>
                                    <button class="btn btn-default btn-sm" type="submit">Abrir uma OS avulsa</button>
                                    <a type="submit" class="btn btn-default btn-sm"
                                       href="@Url.Action("CadastroDiariaAvulsa", "Dashboard", new { tipoSolicitacao = BHJet_Core.Enum.DashboardTipoDisponivelEnum.CarrosDisponiveis })">
                                        Diária Avulsa
                                    </a>
                                    <p class="visible-xs"></p>
                                    <button class="btn btn-default btn-sm" type="submit">Visualizar agendamentos</button>
                                </div>
                            </div>

                            <div class="col-xs-12 col-sm-12 col-md-4 text-center">
                                <div class="box bg-light-gray">

                                    <label for="exampleInputAmount">Localizar OS / Cliente</label>
                                    @using (Html.BeginForm("OSCliente", "Dashboard", FormMethod.Get, new { @class = "form-inline" }))
                                    {

                                        <div class="form-group">
                                            <div class="input-group">
                                                <div class="input-group-addon"><i class="fa fa-search"></i></div>
                                                @Html.TextBoxFor(model => model.PesquisaOSCliente, new { @class = "form-control", required = "required" })
                                            </div>
                                            <button type="submit" class="btn btn-default" value="Pesquisar">
                                                <i class="fa fa-share">  Pesquisar</i>
                                            </button>
                                        </div>
                                        <br />
                                        @Html.ValidationMessageFor(model => model.PesquisaOSCliente, null, new { @class = "text-warning", @type = "number" })
                                    }

                                    <label for="exampleInputAmount">Localizar Motociclista / Motorista</label>
                                    @using (Html.BeginForm("ChamadoAvulsoEspera", "Dashboard", new { tipoSolicitacao = BHJet_Core.Enum.DashboardTipoDisponivelEnum.MotoristaDisponivel }, FormMethod.Post, new { @class = "form-inline" }))
                                    {
                                        @Html.ValidationSummary(true);
                                        <div class="form-group">
                                            <div class="input-group">
                                                <div class="input-group-addon"><i class="fa fa-search"></i></div>
                                                @Html.TextBoxFor(model => model.PesquisaMotociclista, new { @class = "form-control", @type = "number" })
                                            </div>
                                            <button type="submit" class="btn btn-default" value="Pesquisar">
                                                <i class="fa fa-share">  Pesquisar</i>
                                            </button>
                                        </div>
                                        <br />
                                        @Html.ValidationMessageFor(model => model.PesquisaMotociclista, null, new { @class = "text-warning" })
                                    }
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

<script src="@Url.Content("~/Scripts/jquery.mask.min.js")"></script>
<script>
    $(document).ready(function ($) {
        $('.counter').counterUp({
            delay: 10,
            time: 1000
        });
        $('#PesquisaOSCliente').mask('0#');
        $('#PesquisaMotociclista').mask('0#');
    });
</script>