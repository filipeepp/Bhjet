@{
    if (UsuarioLogado.Instance.BhjTpUsu != null && UsuarioLogado.Instance.BhjTpUsu == TipoUsuario.Administrador)
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
    else if (UsuarioLogado.Instance.BhjTpUsu != null && UsuarioLogado.Instance.BhjTpUsu == TipoUsuario.FuncionarioCliente)
    {
        Layout = "~/Views/Shared/_LayoutClienteInterno.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_LayoutClienteExterno.cshtml";
    }
}

@using BHJet_Enumeradores
@using BHJet_Admin.Infra