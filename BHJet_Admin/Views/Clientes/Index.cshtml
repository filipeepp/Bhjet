@using System.Web.Http

<ol class="breadcrumb">
	<li><a onclick="@Url.Action("Index", "Home")">Home</a></li>
	<li><a href="#map_canvas">Clientes</a></li>
</ol>

<div class="container-fluid">
	<div class="row">
		<div class="col-xs-12 col-sm-7 col-md-12">
			<div class="panel panel-default">
				<div class="panel-body">
					<div class="titulo">
						<h2>
							<a href=" @Url.Action("Index", "Home")">
								<i class="fa fa-arrow-left" aria-hidden="true"></i>
							</a>
							Clientes
						</h2>
					</div>
					<div class="row">

						<div class="col-xs-12 col-sm-7 col-lg-3">
							<a href="@Url.Action("NovoCliente", "Clientes")">
								<div class="small-box bg-light-gray">
									<div class="inner">
										<h3><i class="fa fa-plus-circle" aria-hidden="true"></i></h3>
										<h6>Novo Cliente</h6>
									</div>
									<div class="icon">
										<i class="ion ion-bag"></i>
									</div>
									<span class="small-box-footer">Acessar <i class="fa fa-arrow-circle-right"></i></span>
								</div>
							</a>
						</div>

						<div class="col-xs-12 col-sm-7 col-lg-3">
							<a href="@Url.Action("Clientes", "Clientes")">
								<div class="small-box bg-light-gray">
									<div class="inner">
										<h3><i class="fa fa-pencil-square-o" aria-hidden="true"></i></h3>
                                        <h6>Consulta/Edição Cliente</h6>
									</div>
									<div class="icon">
										<i class="ion ion-bag"></i>
									</div>
									<span class="small-box-footer">Acessar <i class="fa fa-arrow-circle-right"></i></span>
								</div>
							</a>
						</div>

					</div>


				</div>
			</div>
		</div>
	</div>
</div>

@if (TempData["mensagemGeral"] != null)
{
	<input type="hidden" id="mensagemController" value="@TempData["mensagemGeral"].ToString()" />
	<script type="text/javascript">

		window.onload = function () {
			var mensagem = $("#mensagemController").val();
            $("#msgModal").text(mensagem)
            $("#imgMensagem").attr("src", "@TempData["imgMensagemGeral"]");
            $('#myModal').modal('show')
        };
	</script>
}