@using System.Web.Http
@using BHJet_Admin.Models.Clientes
@using BHJet_Core.Enum
@model ClienteModel

@Scripts.Render("~/bundles/jqueryval")
<link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>

<script>
	$(function () {
		$("#tabs").tabs();
	});
</script>

<ol class="breadcrumb">
	<li><a href="@Url.Action("Index", "Home")">Home</a></li>
	<li><a href="#map_canvas">Cadastrar Cliente</a></li>
</ol>

<div class="container-fluid">
	<div class="row">
		<div class="col-xs-12 col-sm-7 col-md-12">
			<div class="panel panel-default">
				<div class="panel-body">

					<div class="titulo">
						<h2>
							<a onclick="history.go(-1);">
								<i class="fa fa-arrow-left" aria-hidden="true"></i>
							</a>
							Cadastrar Cliente
						</h2>
					</div>

					<div class="container-fluid">
						<div id="tabs">
							<ul>
								<li><a href="#tabs-1"><i class="fa fa-user" aria-hidden="true"></i>Dados cadastrais</a></li>
								<li><a href="#tabs-2"><i class="fa fa-file-text-o" aria-hidden="true"></i>Contatos</a></li>
								<li><a href="#tabs-3"><i class="fa fa-money" aria-hidden="true"></i>Valores</a></li>
							</ul>
							<div id="tabs-1">
								<form class="formTab" id="formDadosCadastrais">
									<div class="form-row">
										<div class="form-group col-xs-4 col-md-2">
											<label for="txtCodigo">Código</label>
											<input id="txtCodigo" name="txtCodigo" type="text" class="form-control input-sm" value="" />
										</div>
									</div>
									<div class="form-row">
										<div class="form-group col-xs-12 col-md-12">
											<label for="txtNome">Nome / Razão Social</label>
											<input id="txtNome" name="txtNome" type="text" class="form-control" value="" />
										</div>
									</div>
									<div class="form-row">
										<div class="form-group col-xs-12 col-md-12">
											<label for="txtNomeFantasia">Nome Fantasia</label>
											<input id="txtNomeFantasia" name="txtNomeFantasia" type="text" class="form-control" value="" />
										</div>
									</div>
									<div class="form-row">
										<div class="form-group col-xs-5 col-md-4">
											<label for="txtCpfCnpj">CPF / CNPJ</label>
											<input id="txtCpfCnpj" name="txtCpfCnpj" type="text" class="form-control" value="" />
										</div>
										<div class="form-group col-xs-5 col-md-6">
											<label for="txtInscricaoEstadual">Insc. Estadual</label>
											<input id="txtInscricaoEstadual" name="txtInscricaoEstadual" type="text" class="form-control" value="" />
										</div>
										<div class="form-group col-xs-2 col-md-2">
											<div class="cst-ckb-Novo-Cliente">
												<label for="ckbIss" class="label-cbx">
													<span>ISS</span>
													<input id="ckbIss" type="checkbox" name="ckbIss" class="invisible">
													<div class="checkbox">
														<svg width="20px" height="20px" viewBox="0 0 20 20">
															<path d="M3,1 L17,1 L17,1 C18.1045695,1 19,1.8954305 19,3 L19,17 L19,17 C19,18.1045695 18.1045695,19 17,19 L3,19 L3,19 C1.8954305,19 1,18.1045695 1,17 L1,3 L1,3 C1,1.8954305 1.8954305,1 3,1 Z"></path>
															<polyline points="4 11 8 15 16 6"></polyline>
														</svg>
													</div>
												</label>
											</div>
										</div>
									</div>
									<div class="form-row">
										<div class="form-group col-xs-5 col-md-7">
											<label for="txtEndereco">Endereço</label>
											<input id="txtEndereco" name="txtEndereco" type="text" class="form-control" value="" />
										</div>
										<div class="form-group col-xs-4 col-md-3">
											<label for="txtComplemento">Complemento</label>
											<input id="txtComplemento" name="txtComplemento" type="text" class="form-control" value="" />
										</div>
										<div class="form-group col-xs-3 col-md-2">
											<label for="txtNumeroEndereco">Nº</label>
											<input id="txtNumeroEndereco" name="txtNumeroEndereco" type="text" class="form-control" value="" />
										</div>
									</div>
									<div class="form-row">
										<div class="form-group col-xs-6 col-md-6">
											<label for="txtBairro">Bairro</label>
											<input id="txtBairro" name="txtBairro" type="text" class="form-control" value="" />
										</div>
										<div class="form-group col-xs-6 col-md-6">
											<label for="txtCidade">Cidade</label>
											<input id="txtCidade" name="txtCidade" type="text" class="form-control" value="" />
										</div>
									</div>
									<div class="form-row">
										<div class="form-group col-xs-6 col-md-6">
											<label for="txtEstado">Estado</label>
											<input id="txtEstado" name="txtEstado" type="text" class="form-control" value="" />
										</div>
										<div class="form-group col-xs-6 col-md-6">
											<label for="txtCep">CEP</label>
											<input id="txtCep" name="txtCep" type="text" class="form-control" value="" />
										</div>
									</div>
									<div class="form-row">
										<div class="form-group col-xs-12 col-md-12">
											<label for="txaObservacoes">Observações</label>
											<textarea id="txaObservacoes" name="txaObservacoes" class="form-control"></textarea>
										</div>
									</div>
									<div class="form-row">
										<div class="form-group col-xs-12 col-md-6">
											<label for="txtHomePage">Home Page</label>
											<input id="txtHomePage" name="txtHomePage" type="text" class="form-control" value="" />
										</div>
									</div>
								</form>
							</div>
							<div id="tabs-2">
								<form class="formTab" id="formContato">
									<div class="form-row">
										<div class="form-group col-xs-6 col-md-4">
											<label for="txtContato">Contato</label>
											<input id="txtContato" name="txtContato" type="text" class="form-control input-sm" value="" />
										</div>
										<div class="form-group col-xs-6 col-md-4">
											<label for="txtEmail">E-mail</label>
											<input id="txtEmail" name="txtEmail" type="text" class="form-control input-sm" value="" />
										</div>
									</div>
									<div class="form-row">
										<div class="form-group col-xs-6 col-md-4">
											<label for="txtTelefoneComercial">Tel. Comercial</label>
											<input id="txtTelefoneComercial" name="txtTelefoneComercial" type="text" class="form-control input-sm" value="" />
										</div>
										<div class="form-group col-xs-6 col-md-4">
											<label for="txtTelefoneCelular">Celular</label>
											<input id="txtTelefoneCelular" name="txtTelefoneCelular" type="text" class="form-control input-sm" value="" />
										</div>
									</div>
									<div class="form-row">
										<div class="form-group col-xs-6 col-md-4">
											<label for="txtSetor">Setor</label>
											<input id="txtSetor" name="txtSetor" type="text" class="form-control input-sm" value="" />
										</div>
										<div class="form-group col-xs-6 col-md-4">
											<label for="txtAniversario">Aniversário</label>
											<input id="txtAniversario" name="txtAniversario" type="text" class="form-control input-sm" value="" />
										</div>
									</div>
									<div class="form-row">
										<button id="btnNovoContato" name="btnNovoContato" class="btn btn-primary pull-right" type="button"><i class="fa fa-plus" aria-hidden="true"></i>Novo Contato</button>
									</div>
								</form>
							</div>
							<div id="tabs-3">
								<form class="formTab" id="formValores">
									<div class="form-row">
										<div class="form-group col-xs-12 col-md-3">
											<label for="rdbTipoTarifa_BHJet_Core_Enum_TipoTarifa">Tipo Tarifa</label>
											<br />
											@foreach (var tipoEnum in Enum.GetValues(typeof(TipoTarifa)))
											{
												var id = TagBuilder.CreateSanitizedId(string.Format("{0}_{1}", "rdbTipoTarifa", typeof(TipoTarifa), tipoEnum));
												@Html.RadioButtonFor(s => s.Valor.FirstOrDefault().TipoTarifa, tipoEnum, new { id, @class = "option-input radio" })
												@Html.Label(tipoEnum.ToString())
											   <br />
											}
											@Html.ValidationMessageFor(model => model.Valor.FirstOrDefault().TipoTarifa, null, new { @class = "text-danger" })
										</div>
									</div>
									<div class="form-row">
										<div class="form-group col-xs-12 col-md-2">
											<label for="txtValorUnitario">Valor Unitário</label>
											<input id="txtValorUnitario" name="txtValorUnitario" type="text" class="form-control input-sm" value="" />
										</div>
									</div>
									<div class="form-row">
										<div class="form-group col-xs-12 col-md-2">
											<label>Vigência</label>
											<div class="input-group input-daterange">
												<input id="txtVigenciaInicio" name="txtVigenciaInicio" type="text" class="form-control" value="" />
												<div class="input-group-addon">a</div>
												<input id="txtVigenciaFim" name="txtVigenciaFim" type="text" class="form-control" value="" />
											</div>
										</div>
										<div class="form-group col-xs-12 col-md-2">
											<label for="txtFranquia">Franquia Km/mês</label>
											<input id="txtFranquia" name="txtFranquia" type="text" class="form-control input-sm" value="" />
										</div>
										<div class="form-group col-xs-12 col-md-2">
											<label for="txtFranquiaAdicional">Franquia Adicional</label>
											<input id="txtFranquiaAdicional" name="txtFranquiaAdicional" type="text" class="form-control input-sm" value="" />
										</div>
									</div>
									<div class="form-row">
										<div class="form-group col-xs-12 col-md-6">
											<label for="txaObservacoesValor">Observações</label>
											<textarea id="txaObservacoesValor" name="txaObservacoesValor" class="form-control"></textarea>
										</div>
									</div>
								</form>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
