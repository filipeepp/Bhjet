@using BHJet_Admin.Models.Usuario
@using BHJet_Core.Enum
@model UsuariosModel

@Scripts.Render("~/bundles/jqueryval")


<ol class="breadcrumb">
    <li><a href="@Url.Action("Index", "Home")">Home</a></li>
    <li><a href="#map_canvas">Manutenção Usuários</a></li>
</ol>

<div class="container-fluid">
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12">
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="titulo">
                        <h2>
                            <a href="@Url.Action("Index", "Motorista")">
                                <i class="fa fa-arrow-left" aria-hidden="true"></i>
                            </a>
                            Manutenção Usuários
                        </h2>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <label for="txtPesquisarCliente">Pesquisar Usuário</label>

                            @using (Html.BeginForm("Index", "Usuario", FormMethod.Get))
                            {
                                <div class="form-group">
                                    <div class="input-group">
                                        <div class="input-group-addon"><i class="fa fa-search"></i></div>
                                        <input style="max-width: 400px;" class="form-control" type="text" id="palavraChave" name="palavraChave">
                                        <button type="submit" class="btn btn-default"><i class="fa fa-share"></i></button>
                                    </div>
                                </div>

                            }

                        </div>
                        <div class="col-md-12">
                            <div class="table-responsive">
                                <br />
                                <table class="table table-bordered">
                                    <thead>
                                        <tr class="bg-light-gray">
                                            <th scope="col">ID</th>
                                            <th scope="col">Email</th>
                                            <th scope="col">Tipo Usuário</th>
                                            <th scope="col">Situação</th>
                                            <th scope="col">Ações</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var linha in Model.usuarios)
                                        {
                                        <tr>
                                            <td> <a href="@Url.Action("Index", "Usuario", new { Edicao = true, ID = @linha.ID })">@linha.ID</a></td>
                                            <td> <a href="@Url.Action("Index", "Usuario", new { Edicao = true, ID = @linha.ID })"> @linha.Email </a></td>
                                            <td> <a href="@Url.Action("Index", "Usuario", new { Edicao = true, ID = @linha.ID })">@linha.TipoUser.ToString()</a></td>
                                            <td> <a href="@Url.Action("Index", "Usuario", new { Edicao = true, ID = @linha.ID })">@linha.Situacao.ToString()</a></td>
                                            <td>
                                                <a href="@Url.Action("Index", "Usuario", new { Edicao = true, ID = @linha.ID })"><i class="fa fa-trash-o" style="color:indianred" aria-hidden="true"> Excluir</i></a>
                                                <a href="@Url.Action("Index", "Usuario", new { Edicao = true, ID = @linha.ID })"><i class="fa fa-ban" style="color:darkred" aria-hidden="true"> Desativar</i></a>
                                                <a href="@Url.Action("Index", "Usuario", new { Edicao = true, ID = @linha.ID })"><i class="fa fa-check" style="color:forestgreen" aria-hidden="true"> Ativar</i></a>
                                            </td>
                                        </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

@if (TempData["mensagemGeral"] != null)
{
    <script type="text/javascript">
            window.onload = function () {
                $("#msgModal").text("@TempData["mensagemGeral"].ToString()")
                $("#imgMensagem").attr("src", "@TempData["imgMensagemGeral"]");
                $('#myModal').modal('show')
            };
    </script>
}