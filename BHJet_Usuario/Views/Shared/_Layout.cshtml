@using System.Web.Optimization;

<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<title>@ViewBag.Title</title>
		@Styles.Render("~/Content/css")
		@Scripts.Render("~/bundles/modernizr")
		@Scripts.Render("~/bundles/jquery")
		<script src="~/Scripts/Layout.js"></script>

		<style type="text/css">
			ul {
				list-style-type: none;
				margin: 0;
				padding: 0;
				overflow: hidden;
				font-size: 15px;
				font: normal normal normal 14px/1 FontAwesome;
			}

			li {
				float: left;
			}

			li a {
				display: block;
				text-align: center;
				padding: 16px;
				text-decoration: none;
				padding: 16px 20px 0 0;
			}

			li i a {
				display: block;
				text-align: center;
				padding: 16px;
				text-decoration: none;
			}

			li button {
				/*display: block;
				text-align: center;
				padding: 16px;
				text-decoration: none;*/
			}

			.button-login {
				width: 95px;
				height: 30px;
				line-height: 12px;
				font-family: tahoma;
				margin-top: 1px;
				margin-right: 2px;
				position: absolute;
				top: 7px;
				right: 25px;
				text-decoration: none;
				background-color: rgb(51, 122, 183);
				color: rgb(255, 255, 255);
				font-family: 'Source Sans Pro','Helvetica Neue',Helvetica,Arial,sans-serif;
			}

		</style>

	</head>
	<body>
		<nav class="navbar navbar-default">
			<div class="container-fluid" style="margin-left: -15px; margin-right: -15px;">
				<div class="navbar-header">
					@*<button id="menuLogisticaMobile" class="navbar-brand menuMobile" type="button">
						<i class="fa fa-bars" aria-hidden="true"></i>
					</button>*@
					<a class="navbar-brand" href="@Url.Action("Index", "Home")">
						<img src="~/Images/logoLogisticaPreto.jpg" class="logo" style="margin-left: 10px;" />
					</a>
					<ul style="font-family: 'Source Sans Pro','Helvetica Neue',Helvetica,Arial,sans-serif;">
						<li><a href="#">Para Empresas</a></li>
						<li><a href="#">Para Você</a></li>
						<li><a href="#">Quem Somos</a></li>
						<li><a href="#">Contato</a></li>
						<li><a href="#">Trabalhe Conosco</a></li>
						<li><a href="#"><i class="fa fa-facebook-square" aria-hidden="true"></i></a></li>
						<li><a href="#"><i class="fa fa-instagram" aria-hidden="true"></i></a></li>
						<li><button class="button-login">Minha&nbsp;Conta</button></li>
					</ul>
				</div>
			</div>
		</nav>
		@{
			Html.RenderPartial("~/Views/Shared/_Loading.cshtml");
		}
		<div class="content-wrapper">
			@RenderBody()
		</div>
		<div id="myModal" class="modal fade" style="margin-top: 10%;" tabindex="-1" role="dialog">
			<div class="modal-dialog" role="document">
				<div class="modal-content">
					<div class="modal-header">
						<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span style="color: white;" aria-hidden="true">&times;</span></button>
						<h4 class="modal-title">Atenção</h4>
					</div>
					<div class="modal-body">
						<img id="imgMensagem" /><br /><br />
						<p id="msgModal"></p>
					</div>
					<div class="modal-footer">
						<button id="closeMsgGeral" type="button" class="btn btn-default" data-dismiss="modal">Fechar</button>
					</div>
				</div><!-- /.modal-content -->
			</div><!-- /.modal-dialog -->
		</div><!-- /.modal -->

		<footer id="footer">
			<strong>Copyright © 2018 - BHJet Express, Logística e serviços.</strong>
		</footer>
		@Scripts.Render("~/bundles/bootstrap")
		@Scripts.Render("~/Scripts/jquery.validate.min.js")
		@Scripts.Render("~/Scripts/jquery.validate.unobtrusive.min.js")
		@RenderSection("scripts", required: false)
	</body>
</html>
