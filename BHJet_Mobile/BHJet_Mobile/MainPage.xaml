<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:BHJet_Mobile"
             x:Class="BHJet_Mobile.MainPage">

    <ContentPage.Content>
        <AbsoluteLayout BackgroundColor="#E1E1E1">

            <Image Source="bgShipping" AbsoluteLayout.LayoutBounds="1,1,1,1" AbsoluteLayout.LayoutFlags="All" Aspect="AspectFill"></Image>

            <Image Source="logobhjet"  AbsoluteLayout.LayoutBounds=".5,0.1,200,25"
                AbsoluteLayout.LayoutFlags="PositionProportional"  ></Image>

            <!--<Image Source="logobhjet"  AbsoluteLayout.LayoutBounds=".5,0,100,25"
                AbsoluteLayout.LayoutFlags="PositionProportional"  ></Image>-->

            <Frame BackgroundColor="White" Padding="2" OutlineColor="Gray"  AbsoluteLayout.LayoutBounds="0.5, 0.21 , 290, 50" AbsoluteLayout.LayoutFlags="PositionProportional" >
                <Grid HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand"  MinimumHeightRequest="290" BackgroundColor="#141414" >

                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" /> 
                    </Grid.ColumnDefinitions>

                    <Label Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" HorizontalOptions="Center" VerticalOptions="Start" Text="JOÃO DA SILVA" TextColor="White"  />
                    <Label Grid.Row="1" Grid.Column="0" HorizontalOptions="End" VerticalOptions="Start" Text="Status: " TextColor="White"  />
                    <Label Grid.Row="1" Grid.Column="1" HorizontalOptions="Start" VerticalOptions="Start" Text="Online" TextColor="GreenYellow"  />

                </Grid> 
            </Frame>

            <Frame BackgroundColor="White" Padding="2" OutlineColor="Gray"  AbsoluteLayout.LayoutBounds="0.5, 0.5 ,290, 230" AbsoluteLayout.LayoutFlags="PositionProportional" >
                <Grid HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand"  MinimumHeightRequest="250" BackgroundColor="#141414" >

                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <Label Grid.Row="0" HorizontalOptions="Center" VerticalOptions="End" Text="Aguardando chamado .." TextColor="White"  />

                    <Image x:Name="findIcon" Grid.Row="1" HorizontalOptions="Center" VerticalOptions="End" Source="clock.png"  WidthRequest="80" HeightRequest="60" />

                </Grid>
            </Frame>
 
            <Grid VerticalOptions="End"   AbsoluteLayout.LayoutBounds=".5,1,1,.2" AbsoluteLayout.LayoutFlags="All" BackgroundColor="#eff0f2" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" /> 
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <BoxView Grid.Column="0" Grid.ColumnSpan="4" HorizontalOptions="FillAndExpand"  Color="#141414" HeightRequest="2" 
                         VerticalOptions="Start"  />

                <StackLayout Orientation="Vertical" Grid.Column="0" VerticalOptions="Center" HorizontalOptions="CenterAndExpand">
                    <Image  Source="home.png"   WidthRequest="30" HeightRequest="25" Margin="0,12,0,8" />
                </StackLayout>

                <StackLayout Orientation="Vertical"  Grid.Column="1"  HorizontalOptions="CenterAndExpand" VerticalOptions="End">
                    <Image  Source="money.png"  WidthRequest="30" HeightRequest="25" Margin="0,12,40,8" />
                </StackLayout>

                <StackLayout Orientation="Vertical"  Grid.Column="2"  HorizontalOptions="CenterAndExpand" VerticalOptions="End">
                    <Image  Source="bandeirada.png"  WidthRequest="30" HeightRequest="25" Margin="40,12,0,8" />
                </StackLayout>
                
                <StackLayout Orientation="Vertical"  Grid.Column="3"  HorizontalOptions="CenterAndExpand" VerticalOptions="End">
                    <Image  Source="motoqueiro.png"  WidthRequest="30" HeightRequest="25" Margin="0,12,0,8" />
                    <!--<Label Text="Atualizar Dados" TextColor="#474646" />-->
                </StackLayout>
            </Grid>

            <StackLayout VerticalOptions="End"   AbsoluteLayout.LayoutBounds=".5,1,.16,.3" AbsoluteLayout.LayoutFlags="All" >
                <Button WidthRequest="15" FontSize="4"  BorderColor="Gray"
                        BackgroundColor="#ffd423" Clicked="Button_Clicked" Image="search2.png"
                        HeightRequest="60"  BorderRadius="40"></Button>
            </StackLayout>

            <!--<BoxView Color="Olive"  AbsoluteLayout.LayoutBounds="1,.5, 25, 100"
                AbsoluteLayout.LayoutFlags="PositionProportional" />

            <BoxView Color="Red" AbsoluteLayout.LayoutBounds="0,.5,25,100"
                AbsoluteLayout.LayoutFlags="PositionProportional" />-->


        </AbsoluteLayout>
    </ContentPage.Content>





</ContentPage>
